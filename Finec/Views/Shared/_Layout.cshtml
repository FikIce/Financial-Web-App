<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finec</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Finec.styles.css" asp-append-version="true" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f8f9fa; /* Light grey background */
        }

        .sidebar {
            width: 250px;
            background-color: #fff; /* White sidebar */
            border-right: 1px solid #dee2e6;
            display: flex;
            flex-direction: column;
            padding: 1rem;
            position: fixed;
            height: 100%;
        }

        .main-content {
            flex-grow: 1;
            padding: 2rem;
            margin-left: 250px; /* Offset for the fixed sidebar */
        }

        .sidebar .nav-link {
            color: #495057;
            font-size: 1rem;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            margin-bottom: 0.25rem;
        }

        .sidebar .nav-link:hover {
            background-color: #e9ecef;
        }

        .sidebar .nav-link.active {
            background-color: #0d6efd;
            color: #fff;
            font-weight: 500;
        }

        .sidebar-header {
            padding-bottom: 1rem;
            margin-bottom: 1rem;
            border-bottom: 1px solid #dee2e6;
            text-align: center;
        }

        .sidebar-header .h4 {
            color: #0d6efd;
        }

        .sidebar-footer {
            margin-top: auto; /* Pushes footer to the bottom */
        }
    </style>
</head>
<body>
    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <div class="sidebar-header">
            <a class="h4 text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Finec</a>
            <p class="text-muted small mb-0">Your Money, Made Easy.</p>
        </div>

        <ul class="nav flex-column flex-grow-1">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt fa-fw me-2"></i>Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Assets" asp-action="Index"><i class="fas fa-chart-pie fa-fw me-2"></i>Assets</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Budget" asp-action="Index"><i class="fas fa-bullseye fa-fw me-2"></i>Budget</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Expenses" asp-action="Index"><i class="fas fa-receipt fa-fw me-2"></i>Expenses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="Index"><i class="fas fa-exchange-alt fa-fw me-2"></i>Transactions</a>
            </li>
        </ul>

        <div class="sidebar-footer">
            <partial name="_LoginPartial" />
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <!-- THIS LINE IS ESSENTIAL -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>