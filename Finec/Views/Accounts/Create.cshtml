@model Finec.Models.Account

@{
    ViewData["Title"] = "Create New Account";
}

<h1 class="h3">@ViewData["Title"]</h1>
<p class="text-muted">Add a new financial account to track.</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="AccountName" class="form-label"></label>
                <input asp-for="AccountName" class="form-control" placeholder="e.g., BCA Debit, GoPay Wallet" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CurrentBalance" class="form-label">Initial Balance</label>
                <input asp-for="CurrentBalance" class="form-control" type="number" step="0.01" value="0" />
                <span asp-validation-for="CurrentBalance" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create Account" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}