@model Finec.ViewModels.AccountsIndexViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Manage Accounts";
    var culture = new CultureInfo("ms-MY");
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">Add, edit, or remove your financial accounts and e-wallets.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Account
    </a>
</div>

<!-- Total Balance Card -->
<div class="card bg-light mb-4">
    <div class="card-body">
        <h5 class="card-title text-muted">Total Liquid Balance</h5>
        <p class="h2 card-text">@Model.TotalBalance.ToString("C", culture)</p>
    </div>
</div>

<hr />

<!-- Accounts Card Grid -->
<div class="row">
    @if (Model.Accounts.Any())
    {
        foreach (var item in Model.Accounts)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title mb-1">@Html.DisplayFor(modelItem => item.AccountName)</h5>
                            <!-- Dropdown for actions -->
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen fa-fw me-2"></i>Edit</a></li>
                                    <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash fa-fw me-2"></i>Delete</a></li>
                                </ul>
                            </div>
                        </div>
                        <p class="h4 card-text mt-2">
                            @item.CurrentBalance.ToString("C", culture)
                        </p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center p-4">
            <p>You haven't added any accounts yet.</p>
            <p class="text-muted">Get started by adding your first bank account, e-wallet, or cash account.</p>
        </div>
    }
</div>