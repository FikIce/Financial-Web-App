@model Finec.Models.Account

@{
    ViewData["Title"] = "Edit Account";
}

<h1 class="h3">@ViewData["Title"]</h1>
<p class="text-muted">Update the details for "@Model.AccountName".</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" /> <!-- Essential for validation -->

            <div class="mb-3">
                <label asp-for="AccountName" class="form-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CurrentBalance" class="form-label"></label>
                <input asp-for="CurrentBalance" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="CurrentBalance" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}