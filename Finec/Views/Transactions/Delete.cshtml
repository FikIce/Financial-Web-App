@model Finec.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<h1 class="h3">@ViewData["Title"]</h1>
<h3 class="text-danger">Are you sure you want to permanently delete this?</h3>
<hr />

<div>
    <h4>Transaction Details</h4>
    <dl class="row">
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.TransactionDate.ToString("dd MMMM yyyy")</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount.ToString("C", new System.Globalization.CultureInfo("ms-MY"))</dd>

        <dt class="col-sm-3">Account</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.AccountName)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>