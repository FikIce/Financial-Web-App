@model Finec.Models.Transaction

@{
    ViewData["Title"] = "Add Transaction";
}

<h1>@ViewData["Title"]</h1>
<h4>Record a new financial activity.</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<TransactionType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AccountId" class="form-label">Account</label>
                <select asp-for="AccountId" class="form-select" asp-items="ViewBag.AccountId">
                    <option value="">-- Select Account --</option>
                </select>
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Amount" class="form-label"></label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TransactionDate" class="form-label"></label>
                <input asp-for="TransactionDate" class="form-control" type="date" />
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Create Transaction" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}