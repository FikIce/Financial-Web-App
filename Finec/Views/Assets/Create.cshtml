@model Finec.Models.Asset
@using Finec.Models

@{
    ViewData["Title"] = "Add New Asset";
}

<h1 class="h3">@ViewData["Title"]</h1>
<p class="text-muted">Add a new investment or valuable item to track.</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="AssetName" class="form-label"></label>
                <input asp-for="AssetName" class="form-control" placeholder="e.g., Bitcoin, S&P 500 ETF" />
                <span asp-validation-for="AssetName" class="text-danger"></span>
            </div>

            <!-- THE NEW DROPDOWN -->
            <div class="mb-3">
                <label asp-for="Type" class="form-label">Asset Type</label>
                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<AssetType>()">
                    <option selected="selected" value="">Please select a type...</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CurrentValue" class="form-label">Initial Value</label>
                <input asp-for="CurrentValue" class="form-control" type="number" step="0.01" value="0" />
                <span asp-validation-for="CurrentValue" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Add Asset" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}